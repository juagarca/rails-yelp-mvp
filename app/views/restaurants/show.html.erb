
<div class="title border-bottom">
  <h1><%= @restaurant.name %></h1>
</div>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<div class="reviews border">
  <h2>Reviews</h2>
  <% @restaurant.reviews.each do |r| %>
    <p><%= '⭐️' * r.rating %> <%= r.content %></p>
  <% end %>
</div>
<h3><%= link_to 'Add a new review', new_restaurant_review_path(params[:id]) %></h3>
<h3><%= link_to '🔙', restaurants_path %></h1>

